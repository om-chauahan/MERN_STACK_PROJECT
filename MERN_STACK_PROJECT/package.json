{
  "name": "event-management-system",
  "version": "1.0.0",
  "description": "MERN Stack Event Management System",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run client\"",
    "server": "npm run dev --prefix backend",
    "client": "npm start --prefix frontend",
    "install-server": "npm install --prefix backend",
    "install-client": "npm install --prefix frontend",
    "install-all": "npm run install-server && npm run install-client",
    "build": "npm run build --prefix frontend",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {},
  "keywords": ["mern", "event-management", "mongodb", "express", "react", "nodejs"],
  "author": "CHAUHAN OM",
  "license": "MIT"
}
